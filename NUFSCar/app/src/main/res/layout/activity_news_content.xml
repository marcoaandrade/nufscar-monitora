<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_news_content"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.monitora.android.nufscar.view.NewsContentActivity">

    <TextView
        android:id="@+id/tituloNoticia"
        android:textStyle="bold"
        android:layout_centerHorizontal="true"
        android:textSize="25sp"
        android:text="Titulo da NotÃ­cia"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />


    <TextView
        android:id="@+id/autorNoticia"
        android:textStyle="bold"
        android:layout_below="@+id/tituloNoticia"
        android:layout_centerHorizontal="true"
        android:textSize="20sp"
        android:text="Autor da Noticia"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />



    <ImageView
        android:id="@+id/imagemNoticia"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_below="@+id/autorNoticia"

        />
    <TextView
        android:id="@+id/autorImagem"
        android:textStyle="bold"
        android:layout_below="@+id/imagemNoticia"
        android:layout_centerHorizontal="true"
        android:textSize="20sp"
        android:text="Autor da Noticia"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />


    <TextView
        android:id="@+id/conteudoNoticia"
        android:textStyle="bold"
        android:layout_below="@+id/autorImagem"
        android:layout_centerHorizontal="true"
        android:textSize="22sp"
        android:text="Conteudo da Noticia"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</RelativeLayout>

